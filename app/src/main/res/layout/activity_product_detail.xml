<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ProductDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/back_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_detailPriceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Price"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintStart_toStartOf="@+id/tv_detailName"
                app:layout_constraintTop_toBottomOf="@+id/image_product" />

            <TextView
                android:id="@+id/tv_detailCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Category"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintStart_toStartOf="@+id/tv_detailPriceLabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailPrice" />

            <TextView
                android:id="@+id/tv_detailConditionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Condition"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintStart_toStartOf="@+id/tv_detailCategoryLabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailCategory" />

            <TextView
                android:id="@+id/tv_detailAccountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Seller ID"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/image_product"
                app:layout_constraintStart_toStartOf="@+id/tv_detailName" />

            <TextView
                android:id="@+id/tv_detailShipmentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipment"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detailConditionLabel"
                app:layout_constraintEnd_toEndOf="@+id/tv_detailWeight"
                app:layout_constraintTop_toTopOf="@+id/tv_detailConditionLabel" />

            <TextView
                android:id="@+id/tv_detailWeightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detailCategoryLabel"
                app:layout_constraintEnd_toEndOf="@+id/tv_detailDiscount"
                app:layout_constraintTop_toTopOf="@+id/tv_detailCategoryLabel" />

            <TextView
                android:id="@+id/tv_detailDiscountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:text="Discount"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_bold"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detailPriceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_detailPriceLabel" />

            <TextView
                android:id="@+id/tv_detailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/montserrat_bold"
                android:maxEms="7"
                android:text="SampleName"
                android:textColor="@color/button_purple"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/image_product" />

            <TextView
                android:id="@+id/tv_detailCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="SampleCategory"
                android:textColor="@color/button_purple"
                app:layout_constraintStart_toStartOf="@+id/tv_detailCategoryLabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailCategoryLabel" />

            <TextView
                android:id="@+id/tv_detailCondition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/montserrat"
                android:text="SampleCondition"
                android:textColor="@color/button_purple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_detailConditionLabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailConditionLabel" />

            <TextView
                android:id="@+id/tv_detailAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="Id"
                android:textColor="@color/button_purple"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detailAccountLabel"
                app:layout_constraintEnd_toEndOf="@+id/tv_detailName"
                app:layout_constraintTop_toTopOf="@+id/tv_detailAccountLabel" />

            <TextView
                android:id="@+id/tv_detailShipment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="SampleShipment"
                android:textColor="@color/button_purple"
                android:fontFamily="@font/montserrat"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detailCondition"
                app:layout_constraintEnd_toEndOf="@+id/tv_detailShipmentLabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailShipmentLabel"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_detailWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SampleWeight"
                android:textColor="@color/button_purple"
                android:fontFamily="@font/montserrat"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detailCategory"
                app:layout_constraintEnd_toEndOf="@+id/tv_detailWeightLabel"
                app:layout_constraintTop_toTopOf="@+id/tv_detailCategory" />

            <TextView
                android:id="@+id/tv_detailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="SamplePrice"
                android:textColor="@color/button_purple"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_detailPriceLabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailPriceLabel" />

            <TextView
                android:id="@+id/tv_detailDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/montserrat"
                android:text="SampleDiscount"
                android:textColor="@color/button_purple"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detailPrice"
                app:layout_constraintEnd_toEndOf="@+id/tv_detailDiscountLabel"
                app:layout_constraintTop_toBottomOf="@+id/tv_detailDiscountLabel"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/image_product"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="28dp"
                android:scaleType="centerInside"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnPurchase"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/button_purple"
        android:text="Purchase"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/button_purple"
        android:text="Back"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintBottom_toBottomOf="@+id/btnPurchase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPurchase"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>